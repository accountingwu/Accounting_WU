                                                                <select class="form-control">
                                                                    <option>ชื่อ</option>
                                                                    <option>รหัส</option>
                                                                </select>

                                                            </div>
                                                            <div class="col-md-3">
                                                                <input class="form-control" ID="Item" name="width" placeholder="" />
                                                            </div>
                                                            <div class="col-md-1">
                                                                <input type="submit" value="ค้นหา" class="btn btn-primary" id="SearchVender" />
                                                            </div>
                                                            <br />

                                                            <table class="table">

                                                                <thead>
                                                                    <tr>
                                                                        <th>รหัสสิน</th>
                                                                        <th>ชื่อสินค้า</th>
                                                                        <th>ชื่อสินค้า 2</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td>123</td>
                                                                        <td>วิช เฟม</td>
                                                                        <td>wich fame</td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>

                                            <div class="modal-footer">

                                                <button type="button" class="btn btn-default" data-dismiss="modal">ปิด</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </td>
                            <td><input class="form-control" name="pname1" ID="pname1" /></td>
                            <td><input class="form-control" name="num" ID="num" /></td>
                            <td><input class="form-control" name="PriceperOne" ID="PriceperOne" /></td>
                            <td><input class="form-control" name="discount" ID="discount" /></td>
                            <td><input class="form-control" name="price" ID="price" /></td>
                        </tr>


                        <tr>
                            <td>
                                <div class="input-group">
                                    <input class="form-control" ID="pcode" name="pcode" />
                                    <span class="input-group-addon" data-toggle="modal" data-target="#FinditemPopup"><i class="glyphicon glyphicon-search"></i></span>

                                    <!-- Modal -->
                                    <div class="modal fade" id="FinditemPopup" role="dialog">
                                        <div class="modal-dialog " style="width: 80%; height: 80%">

                                            <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">ค้นหา สินค้า</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="table-responsive table-hover" id="popup">
                                                            <br>
                                                            <div class="col-md-2">ค้นหาโดย</div>
                                                            <div class="col-md-3" id="head">
                                                                <select class="form-control">
                                                                    <option>ชื่อ</option>
                                                                    <option>รหัส</option>
                                                                </select>

                                                            </div>
                                                            <div class="col-md-3">
