
@{
    ViewBag.Title = "ManageBranch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style type="text/css">
    .DetailsRequired {
        font-size: 15px;
        color: red;
    }

    .bg {
        background-color: lightgrey;
    }

    #head {
        padding: 1px;
    }

    tr {
        border-bottom: 1px solid #ddd;
    }

        tr:nth-child(even) {
            background-color: #f2f2f3;
        }

    th {
        background-color: lightgrey;
        color: black;
    }
</style>

<div class="container-fluid">
    <h2>เพิ่ม/แก้ไขรหัสสาขา</h2>
</div>
    

    <div class="container-fluid">
        <div class="bg">
            <div class="btn-group" style="float: right">
                <input type="button" value="ล้างข้อมูล" class="btn btn-primary btn-sm" id="Clear" />
                <input type="button" value="บันทึก" class="btn btn-primary btn-sm" id="Save" />
                <input type="button" value="ลบ" class="btn btn-primary btn-sm" id="Delete" />
                <input type="button" value="แก้ไข" class="btn btn-primary btn-sm" id="edit" />
            </div>
        </div>
    </div>
    <br />

    <form action="" id="formManageBranch">

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-1" id="head">รหัส :</div>
            <div class="col-md-2" id="head">
                <input class="form-control" name="CodeBranch" ID="CodeBranch" />
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-1" id="head">ประเภท :</div>
            <div class="col-md-2">
                <select class="form-control" id="BranchReOrderSafetyEOQ">
                    <option value="Master">สาขาใหญ่</option>
                    <option value="Sm">สาขาย่อย</option>
                </select>
            </div>
            <div class="col-md-1" id="head">ลำดับที่ : </div>
            <div class="col-md-1" id="head">
                <input class="form-control" name="NumBranch" ID="NumBranch" />
            </div>


        </div>
        <br />


        <div class="row">

            <div class="col-md-2"></div>
            <div class="col-md-1" id="head">ชื่อสาขา :</div>
            <div class="col-md-3" id="head">
                <input class="form-control" name="NameBranch" ID="NameBranch" />
            </div>

            <div class="col-md-1"></div>
            <div class="col-md-1" id="head">ชื่อย่อสาขา :</div>
            <div class="col-md-3" id="head">
                <input class="form-control" name="InitialsBranch" ID="InitialsBranch" />
            </div>

        </div>
        <br />


        <div class="row">

            <div class="col-md-2"></div>
            <div class="col-md-1" id="head">ชื่อสาขาภาษา2 :</div>
            <div class="col-md-3" id="head">
                <input class="form-control" name="NameBranch2" ID="NameBranch2" />
            </div>

            <div class="col-md-1"></div>
            <div class="col-md-1" id="head">ชื่อย่อสาขาภาษา2 :</div>
            <div class="col-md-3" id="head">
                <input class="form-control" name="InitialsBranch2" ID="InitialsBranch2" />
            </div>

        </div>
        <br />

        <div class="row">

            <div class="col-md-2"></div>
            <div class="col-md-1" id="head">ที่อยู่ :</div>
            <div class="col-md-3" id="head">
                <textarea rows="4" cols="50" id="AdBranch"></textarea>
            </div>

        </div>
        <br />

        <div class="row">

            <div class="col-md-2"></div>
            <div class="col-md-1" id="head">ที่อยู่ภาษา2 :</div>
            <div class="col-md-3" id="head">
                <textarea rows="4" cols="50" id="AdBranch2"></textarea>
            </div>

        </div>
        <br />


        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-1" id="head">รหัสไปรษณีย์ :</div>
            <div class="col-md-3" id="head">
                <input class="form-control" name="PostBranch" ID="PostBranch" />
            </div>
        </div><br>


        <div class="row">

            <div class="col-md-2"></div>
            <div class="col-md-1" id="head">โทรศัพท์ :</div>
            <div class="col-md-3" id="head">
                <input class="form-control" name="TelBranch" ID="TelBranch" />
            </div>

            <div class="col-md-1"></div>
            <div class="col-md-1" id="head">แฟ็กซ์ :</div>
            <div class="col-md-3" id="head">
                <input class="form-control" name="FaxBranch" ID="FaxBranch" />
            </div>

        </div>
        <br />


        <div class="row">

            <div class="col-md-2"></div>
            <div class="col-md-1" id="head">หมายเหตุ :</div>
            <div class="col-md-3" id="head">
                <textarea rows="4" cols="50" id="NoteBranch"></textarea>
            </div>

        </div>
        <br />

        <div class="container">

            <div class="table-responsive table-hover" id="ShowBranch">
                <table class="table">
                    <thead>
                        <tr>
                            <th>รหัสสาขา</th>
                            <th>ชื่อสาขา</th>
                            <th>ชื่อภาษา 2</th>
                            <th>ที่อยู่</th>
                            <th>ที่อยู่ภาษา 2</th>
                            <th>ปณ.</th>
                            <th>โทร.</th>
                            <th>แฟ็กซ์</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>2</td>
                            <td>3</td>
                            <td>4</td>
                            <td>5</td>
                            <td>6</td>
                            <td>7</td>
                            <td>8</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


    </form>
