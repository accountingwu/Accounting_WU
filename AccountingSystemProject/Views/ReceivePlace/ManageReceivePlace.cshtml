@using PagedList.Mvc;
@using PagedList;
@using AccountingSystemProject.Models;
@{
    ViewBag.Title = "ManageReceivePlace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    .DetailsRequired {
        font-size: 15px;
        color: red;
    }

    .bg {
        background-color: lightgrey;
    }

    #head {
        padding: 1px;
    }

    tr {
        border-bottom: 1px solid #ddd;
    }

        tr:nth-child(even) {
            background-color: #f2f2f3;
        }

    th {
        background-color: lightgrey;
        color: black;
    }
</style>


<div class="container-fluid ">
    <h3>เพิ่ม/แก้ไข รหัสสถานที่รับของ</h3>
    <div class="table-responsive table-hover" id="Expn">
        <table class="table">
            <thead>
                <tr>
                    <th>รหัสสถานที่รับของ</th>
                    <th>ชื่อสถานที่รับของ</th>
                    <th>ชื่อผู้รับของ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Expn in ViewBag.MyData)
                {
                    <tr>
                        <td data-id="@Expn.DropShipID">
                            @Expn.DropShipCode
                        </td>
                        
                        <td>
                            @Expn.DropShipName
                        </td>
                        <td>
                            @Expn.ename1
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div style="text-align: center">@Html.PagedListPager((IPagedList)ViewBag.MyData, page => Url.Action("ManageReceivePlace", new { page }))</div>
</div>
<br />

<div class="container-fluid">
    <div class="bg">
        <div class="btn-group" style="float: right">
            <input type="submit" value="ล้างข้อมูล" class="btn btn-primary btn-sm btn-responsive" id="Clear" />
            <input type="submit" value="บันทึก" class="btn btn-primary btn-sm btn-responsive" id="Save" />
            <input type="submit" value="ลบข้อมูล" class="btn btn-primary btn-sm btn-responsive" id="Delete" />
            @*<input type="submit" value="ค้นหา" class="btn btn-primary btn-sm btn-responsive" id="Find" />
            <input type="submit" value="Refresh" class="btn btn-primary btn-sm btn-responsive" id="Refresh" />
            @*<input type="submit" value="Preview" class="bt@*n btn-primary btn-sm btn-responsive" id="Preview" />
                <input type="submit" value="พิมพ์" class="btn btn-primary btn-sm btn-responsive" id="Print" />*@
        </div>
        <br /><br /><br />

        <form action="" id="ReceivePlace" class="container-fluid ">

            <input type="hidden" name="DropShipID" id="DropShipID" value="" />
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head">รหัสสถานที่รับของ : <font color="red"> * </font></div>
                <div class="col-md-4" id="head">
                    <input class="form-control" placeholder="รหัสสถานที่รับของ" name="DropShipCode" ID="DropShipCode" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head">ชื่อสถานที่รับของ : <font color="red"> * </font></div>
                <div class="col-md-4" id="head">
                    <input class="form-control" placeholder="ชื่อสถานที่รับของ" name="DropShipName" ID="DropShipName" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head"> ที่อยู่ : </div>
                <div class="col-md-4" id="head">
                    <input class="form-control" placeholder="ชื่อย่อรายได้" name="Addr" ID="Addr" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head"> แขวง/ตำบล : </div>
                <div class="col-md-4" id="head">
                    <input class="form-control" placeholder="แขวง/ตำบล" name="District" ID="District" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head"> เขต/อำเภอ : </div>
                <div class="col-md-4" id="head">
                    <input class="form-control" placeholder="เขต/อำเภอ" name="Amphur" ID="Amphur" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head"> จังหวัด : </div>
                <div class="col-md-4" id="head">
                    <input class="form-control" placeholder="จังหวัด" name="Province" ID="Province" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head"> รหัสไปรษณีย์ : </div>
                <div class="col-md-4" id="head">
                    <input class="form-control" placeholder="รหัสไปรษณีย์" name="PostCode" ID="PostCode" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head"> แฟกส์ : </div>
                <div class="col-md-4" id="head">
                    <input class="form-control" placeholder="จังหวัด" name="Fax" ID="Fax" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head"> โทรศัพท์: </div>
                <div class="col-md-4" id="head">
                    <input class="form-control" placeholder="รหัสไปรษณีย์" name="Tel" ID="Tel" />
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-2" id="head">ชื่อผู้รับ : <font color="red"> * </font></div>
                <div class="col-md-3" id="head">
                    <input class="form-control" ID="Contact" name="Contact" placeholder="ชื่อผู้รับ"  />
                </div>

                <div class="col-md-3">
                    <div class="input-group">
                        <input class="form-control" ID="ename1" name="ename1" />
                        <span class="input-group-addon" data-toggle="modal" data-target="#FinditemPopupSup"><i class="glyphicon glyphicon-search"></i></span>

                        <!-- Modal -->
                        <div class="modal fade" id="FinditemPopupSup" role="dialog">
                            <div class="modal-dialog " style="width: 80%; height: 80%">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">ค้นหา รายชื่อผู้รับ</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="table-responsive table-hover" id="popup">
                                                <br>
                                                <div class="col-md-2">ค้นหาโดย</div>
                                                <div class="col-md-3" id="head">
                                                    <select class="form-control">
                                                        <option>ชื่อบัญชี</option>
                                                        <option>รหัสบัญชี</option>
                                                    </select>

                                                </div>
                                                <div class="col-md-3">
                                                    <input class="form-control" ID="Acc" name="width" placeholder="" />
                                                </div>
                                                <div class="col-md-1">
                                                    <input type="submit" value="ค้นหา" class="btn btn-primary" id="SearchAcc" />
                                                </div>
                                                <br />

                                                <table class="table">

                                                    <thead>
                                                        <tr>
                                                            <th>รหัสผู้รับ</th>
                                                            <th>ชื่อผู้รับ</th>
                                                           

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var Emm in ViewBag.MyData1)
                                                        {
                                                            <tr>
                                                                <td data-id="@Emm.eid" data-dismiss="modal">
                                                                    @Emm.ecode
                                                                </td>
                                                                <td data-dismiss="modal">
                                                                    @Emm.ename1
                                                                </td>
                                                               

                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                                <div class="modal-footer">

                                    <button type="button" class="btn btn-default" data-dismiss="modal">ปิด</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <br>

                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-2" id="head">Remark : </div>
                        <div class="col-md-4" id="head">
                            <input class="form-control" placeholder="Remark" name="Remark" ID="Remark" />
                        </div>
                    </div>
        </form>
        <br />
        <br />
    </div>
</div>


@section scripts {

    @Scripts.Render("~/Scripts/validate/jquery.validate.js")
    @Scripts.Render("~/Scripts/validate/ReceiveTypedata.js")
    <script>
        $("div#Expn table").delegate('tr', 'click', function () {
            var id = $(this).find("td:first").data("id");
            if (id != null) {
                $.ajax({
                    url: 'ShowTableExpn',
                    type: 'post',
                    data: {
                        'id': id

                    },
                    dataType: "json",
                    success: function (data) {
                        $('#DropShipID').val(data.DropShipID);
                        $('#DropShipCode').val(data.DropShipCode);
                        $('#DropShipName').val(data.DropShipName);
                        $('#Addr').val(data.Addr);
                        $('#District').val(data.District);
                        $('#Amphur').val(data.Amphur);
                        //$('#ExpnType').val(data.ExpnType);
                        $('#Province').val(data.Province);
                        $('#PostCode').val(data.PostCode);
                        $('#Tel').val(data.Tel);
                     
                        $('#Fax').val(data.Fax);
                        $('#Contact').val(data.Contact);
                        $('#ename1').val(data.ename1);
                        $('#Remark').val(data.Remark);
               


                    }
                });
            } else {
                $('#DropShipID').val("");
                $('#DropShipCode').val("");
                $('#DropShipName').val("");
                $('#Addr').val("");
                $('#District').val("");
                $('#Amphur').val("");
                //$('#ExpnType').val("");
                $('#Province').val("");
                $('#PostCode').val("");
                $('#Fax').val("");
                $('#Contact').val("");
                $('#ename1').val("");
                $('#Remark').val("");

            }
        })
        $("div#popup table").delegate('tr', 'click', function () {
            var id = $(this).find("td:first").data("id");
            if (id != null) {
                $.ajax({
                    url: 'FinditemPopupExp',
                    type: 'get',
                    data: {
                        'id': id
                    },
                    dataType: "json",
                    success: function (data) {
                        $('#Contact').val(data.ecode);
                        $('#ename1').val(data.ename1);
                     
                    }
                });
            } else {
                $('#Contact').val("");
                $('#ename1').val("");
              

            }
        })

        $("#Save").on('click', function () {
            if ($("#ReceivePlace").valid()) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("SaveExpn", "ReceivePlace")',
                    data: JSON.stringify({
                        DropShipID: $("#DropShipID").val(),
                        DropShipCode: $("#DropShipCode").val(),
                        DropShipName: $("#DropShipName").val(),
                        Addr: $("#Addr").val(),
                        District: $("#District").val(),
                        Amphur: $("#Amphur").val(),
                        Province: $("#Province").val(),
                        PostCode: $("#PostCode").val(),
                        Tel: $("#Tel").val(),
                        Contact: $("#Contact").val(),
                        Remark: $("#Remark").val(),
                        ccode: "TBC"
                    }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    processData: false,
                    success: function (response) {
                        if (response == true){
                        alert("บันทึกสำเร็จ");
                        window.location.reload(true);
                        } else {
                            alert("รหัสสถานที่รับของซ้ำ");
                        }
                    }
                })
            }
        });


        $("#Delete").click(function () {
            if ($("#ReceivePlace").valid()) {

                if (confirm('ยืนยันการลบ')) {
                    Delete();
                } else {
                    return false;
                }
            }
        });

        function Delete() {
            $.ajax({
                url: '@Url.Action("DeleteExpn", "ReceivePlace")',
                type: 'post',
                data: JSON.stringify({
                    DropShipID: $("#DropShipID").val()
                }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                processData: false,
                success: function (data) {
                    if (data) {
                        window.location.reload(true);
                    }
                }
            });
        }

        $("#Clear").click(function () {

            $('#DropShipID').val("");
            $('#DropShipCode').val("");
            $('#DropShipName').val("");
            $('#Addr').val("");
            $('#District').val("");
            $('#Amphur').val("");
            //$('#ExpnType').val("");
            $('#Province').val("");
            $('#PostCode').val("");
            $('#Fax').val("");
            $('#Contact').val("");
            $('#ename1').val("");
            $('#Remark').val("");



        });


    </script>

}











